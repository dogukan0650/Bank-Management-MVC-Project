@model MvcProject.Models.Entity.Account
@{
    ViewBag.Title = "ActivateAccount";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>ActivateAccount</h2>
<h3>Are you sure you want to reactivate this?</h3>
<div>
    <h4>Account</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt class="img-rounded">ID : </dt>
        <dd>@Html.DisplayFor(model => model.accID)</dd>
        <dt>Account Number : </dt>
        <dd>@Html.DisplayFor(model => model.accNum)</dd>
        <dt>Money :</dt>
        <dd>@Html.DisplayFor(model => model.net)$</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Reactivate" class="btn btn-success" /> |
    @Html.ActionLink("Back to List", "ShowDeleted", null , new {@class = "btn btn-danger" })
</div>
    }
</div>

